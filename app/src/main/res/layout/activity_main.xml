<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/take_action"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/reli">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take image"
            android:textSize="19sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            >
            
            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/button"
                android:layout_marginStart="18dp"
                android:background="@drawable/ic_camera" />

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/CardView"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/agrovision">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView"
            android:visibility="gone"
            android:src="@color/white"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/demoText"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:text="First import your image"
                android:textColor="@color/purple_500"
                android:lineSpacingMultiplier="0.9"
                android:textSize="18sp"
                android:justificationMode="inter_word"
                tools:targetApi="o" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:id="@+id/demoArrow"
                android:rotation="60"
                android:visibility="gone"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/scribble"
                app:tint="#5C5555"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your soil is:"
                android:textSize="19sp"
                android:id="@+id/classified"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:textColor="@color/purple_500"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:id="@+id/result"
                android:textColor="#FF0900"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:letterSpacing="0.06"
                android:includeFontPadding="false"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="Click on the result to know more.."
                android:textAlignment="center"
                android:textSize="15sp"
                android:letterSpacing="0.03"
                android:layout_marginTop="8dp"
                android:id="@+id/click_here"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6A3727"
                android:text=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:letterSpacing="0.03"
                android:layout_marginTop="8dp"
                android:id="@+id/crops"
                />

            <TextView
                android:id="@+id/accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#8ED548"
                android:text=""
                android:textAlignment="center"
                android:textSize="22sp"
                android:letterSpacing="0.03"
                />


            <ImageView
                android:id="@+id/next"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="280dp"
                android:src="@drawable/next_icon"/>

            <ImageView
                android:id="@+id/cancel_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="280dp"
                android:src="@drawable/cancel" />


        </LinearLayout>



    </RelativeLayout>
    
</RelativeLayout>